<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="log"/>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)]
                %yellow(%C{1.}):%msg%n%throwable
            </Pattern>
        </layout>
    </appender>
    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/spring-batch.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%magenta(%d) %highlight(%-5level) [%blue(%t)]
                %yellow(%C{1.}):%msg%n%throwable
            </Pattern>
        </encoder>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 100 MegaBytes -->
            <fileNamePattern>${LOGS}/spring-batch-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    <!-- LOG everything at warn level -->
    <logger name="org.springframework.boot.StartupInfoLogger"
            level="trace" additivity="false">
        <appender-ref ref="RollingFile"/>
        <appender-ref ref="Console"/>
    </logger>
    <root level="warn">
        <appender-ref ref="RollingFile"/>
    </root>
    <logger name="org.hibernate" level="error" additivity="false">
        <appender-ref ref="RollingFile"/>
    </logger>
    <logger name="org.hibernate" level="error" additivity="false">
        <appender-ref ref="RollingFile"/>
    </logger>
    <logger name="org.springframework.security" level="debug"
            additivity="false">
        <appender-ref ref="RollingFile"/>
    </logger>
    <logger name="org.springframework.security.oauth2" level="debug"
            additivity="false">
        <appender-ref ref="RollingFile"/>
    </logger>
    <logger name="com.alok" level="debug" additivity="false">
        <appender-ref ref="RollingFile"/>
    </logger>
</configuration>